<div class="page-header">
  <h2>My Feedback</h2>
</div>

<table class="table table-bordered table-striped sortable">
  <thead>
    <tr>
      <th><div class="btn btn-default">Applicant <i class="fa fa-sort-alpha-asc"></div></th>
      <th><div class="btn btn-default">Program <i class="fa fa-sort-alpha-asc"></div></th>
      <th><div class="btn btn-default">Comment <i class="fa fa-sort-alpha-asc"></div></th>
      <th><div class="btn btn-default">Score <i class="fa fa-sort-numeric-asc" aria-hidden="true"></i></div></th>
      <th><div class="btn btn-default">Actions</div></th>
    </tr>
  </thead>

  <tbody>
    <% @feedbacks.each do |feedback| %>
      <tr>
        <td><%= feedback.app.user.email %></td>
        <td><%= feedback.app.program.title %></td>
        <td><%= feedback.comment %></td>
        <td><%= feedback.score %></td>
        <td>
          <%= link_to "Show",
                      feedback_path(feedback), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_feedback_path(feedback), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      feedback_path(feedback),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
