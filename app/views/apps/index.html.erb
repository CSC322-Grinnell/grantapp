<%- model_class = App -%>
<div class="page-header">
  <h2><%=t 'Applications' %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:program_id) %></th>
      <th><%= model_class.human_attribute_name(:text) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th><%=t "Application"%></th>
    </tr>
  </thead>
  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= User.find_by_id(app.user_id).email %></td>
        <td><%= Program.find_by_id(app.program_id).title %></td>
        <td><%= app.text %></td>
        <td><%=l app.created_at %></td>
        <td>
        <% if user_signed_in? && @current_user.role == 'applicant' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_app_path(app), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      app_path(app),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-default btn-xs' %>
                      <% end %>
             <td><%= link_to "Download", app.user_app.url(:original, false), :target=>"_blank", :class => 'btn btn-default btn-xs' %></td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

