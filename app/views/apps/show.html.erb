<%- model_class = App -%>
<div class="page-header">
  <h2><%=t 'Application for' + @app.program.title , :model => model_class.model_name.human.titleize %></h2>
</div>

<dl float class="dl-horizontal" >
  <dt><strong><%=t 'Program' %>:</strong></dt>
  <dd><%= @app.program.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:text) %>:</strong></dt>
  <dd><%= @app.text %></dd>
  <dt><strong><%=t 'File' %>:</strong></dt>
  <dd> <%= link_to "Download", @app.user_app.url(:original, false), :target=>"_blank", :class => 'btn btn-default btn-xs' %> </dd>
  <dt><strong><%=t 'Date Submitted' %>:</strong></dt>
  <dd><%= @app.created_at %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              apps_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_app_path(@app), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              app_path(@app),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
