= form_for(@app) do |f|
  - if @app.errors.any?
    #error_explanation
      %h2
        = pluralize(@app.errors.count, "error")
        prohibited this app from being saved:
      %ul
        - @app.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :text
    %br
      = f.text_field :text
  / .field
  /   = f.label :program_id
  /   %br
  /     = f.select :program_id, Program.all
 
  .actions
    = f.submit

