<%= form_for @app, :html => { :class => "form-horizontal app" } do |f| %>

    <% if @app.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@app.errors.count, "error") %> prohibited this app from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @app.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <%= f.hidden_field :program_id, :value => @program %>
  <%= f.hidden_field :user_id, :value => @current_user.id %>
  <div class="control-group">
    <%= f.label "Upload Application" %>
    <div class="controls">
      <%= f.file_field :user_app, :required => true %>
    </div>
  </div>
  <br>


  <%= f.submit nil, :value => "Submit", :class => 'btn btn-primary', :disable_with => "Submitting..." %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            programs_path, :class => 'btn btn-default' %>

<% end %>
