<%- model_class = Program -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:short_description) %></th>
      <th><%= model_class.human_attribute_name(:long_description) %></th>
      <th><%= model_class.human_attribute_name(:deadline) %></th>
      <th><%= model_class.human_attribute_name(:picture) %></th>
      <th><%= model_class.human_attribute_name(:tags) %></th>
      <th><%= model_class.human_attribute_name(:rubric) %></th>
      <th><%= model_class.human_attribute_name(:application_form) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program.id, program_path(program) %></td>
        <td><%= program.title %></td>
        <td><%= program.short_description %></td>
        <td><%= program.long_description %></td>
        <td><%= program.deadline %></td>
        <td><%= program.picture %></td>
        <td><%= program.tags %></td>
        <td><%= link_to "Download", program.rubric.url(:original, false) %></td>
        <td><%= link_to "Download", program.application_form.url(:original, false) %></td>
        <td><%= link_to t('.show', :default => t("helpers.links.show")), program_path(program), :class => 'btn btn-default btn-xs' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

