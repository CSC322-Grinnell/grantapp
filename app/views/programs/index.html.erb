<%- model_class = Program -%>
<div class="row">
	<div class="col-lg-12">
		<h2 class="well text-center">
				Welcome to Greater Poweshiek Community Foundation's Grant Application System!
		</h3>
	</div>
</div>


<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:short_description) %></th>
      <th><%= model_class.human_attribute_name(:deadline) %></th>
      <th><%= model_class.human_attribute_name(:rubric) %></th>
      <th><%=t 'Application Form' %></th>
      <% if user_signed_in? && @current_user.role == 'applicant' %>
        <th><%=t ' ' %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= link_to program.title, program_path(program) %></td>
        <td><%= program.short_description %></td>
        <td><% if program.deadline == nil %>
          <%= program.deadline %>
          <% else %>
          <%= program.deadline.strftime("%a %b %d, %Y, %I:%M%p") %>
          <% end %> </td>
        <% if program.rubric.exists? %>
          <td><%= link_to "Download", program.rubric.url(:original, false), :target => "_blank", :class => 'btn btn-default btn-xs' %></td>
        <% else %>
          <td>No Rubric Uploaded</td>
        <% end %>
        <td><%= link_to "Download", program.application_form.url(:original, false), :target => "_blank", :class => 'btn btn-default btn-xs' %></td>
        <% if user_signed_in? && @current_user.role == 'applicant' %>
          <td><%= link_to  "Apply", program_path(program), :class => 'btn btn-default btn-xs' %></td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

